<div class="container px-5 px-sm-0">
  <div class= "row">
    <div class="col-md-8 offset-md-1 mt-5">
     <% @reviews.each do |review| %>
       <table class="table table-hover table-inverse">
           <thead>
              <tr>
                <th>投稿日時</th>
                <th>投稿者</th>
                <th>投稿店名</th>
              </tr>
            </thead>
            <tbody>
             <tr>
               <td>
                 <%= review.created_at.strftime('%Y/%m/%d') %>
               </td>
               <td>
                 <%= link_to review.member.name, admin_member_path(review.member.id) %>
               </td>
               <td>
                 <%= link_to review.shop_name, admin_review_path(review.id) %>
               </td>
               <td>
                 <%= link_to "削除",admin_review_path(review.id),method: :delete, "data-confirm" => "Are you sure?" %>
               </td>
             </tr>
            </tbody>
       </table>
     <% end %>
    </div>
  </div>
</div>