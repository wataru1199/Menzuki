<%= render 'layouts/validates', som: @comment %>
<div class="card-list-container py-5 ">
  <div class = "text-center">
    <h4>"<%= @category.category_name %>"カテゴリの投稿一覧</h4>
  </div>
  <% @category.reviews.each do |review| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= image_tag review.get_image(100,100), class:"card-img-top border-bottom" %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
        </div><!--col_2-->
        <div class="col-10">
         <p class="card-title">
           <span>投稿者: <%= link_to review.member.name, member_path(review.member.id) %></span>
         </p>
         <p class="card-text">
           <span>店名:   <%= link_to review.shop_name, review_path(review.id) %></span><br>
           <span>場所:   <%= review.place %><br>
           <span>カテゴリ: <%= review.category.category_name %></span><br>
           <span id= "favorites_<%= review.id %>">
             <%= render 'public/favorites/favorite', review: review %>
           </span><br>
           <span id= "comment_count_<%= review.id %>">
              コメント<%= review.comments.count %>件
           </span>
         </p>
         <p>
           <span id= "comments_<%= review.id %>">
              <%= render 'public/comments/comment', review: review, comment: @comment %>
           </span>
         </p>
         <p>
          <span id= "comment_form">
           <%= render 'public/comments/form', review: review, comment: @comment %>
          </span>
         </p>
        </div><!--col_10-->
      </div><!-- row end -->
    </div><!-- card-body end -->
  </div><!--card-->
  <% end %>
</div>
