<%= render 'layouts/validates', som: @member %>

<div class= "container">
  <div class= "row">
    <div class="title">
      <h4>プロフィールの編集</h4>
    </div>
  </div>
  <div class= "row">
      <%= form_with model: @member do |f| %>
    <div class="field">
      <h4>プロフィール画像</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="field">
      <h4>ユーザ名</h4>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <h4>メールアドレス</h4>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <h4>紹介文</h4>
      <%= f.text_area :introduction %>
    </div>
      <div class= "field">
      <%= f.submit '変更保存' %>
    </div>
      <% end %>
  </div>
  <div class= "row">
    <%= link_to "退会する", status_member_path(current_member.id), method: :patch, class: "btn btn-danger", data: { confilm: "本当に退会しますか？" } %>
  </div>
</div>