<h2>投稿一覧</h2>
<div class= "container mb-5">
  <div class= "row">
    <div class= "col-4">
     <%= image_tag current_member.get_profile_image(100,100), class:"mt-3 rounded-circle" %><br>
     <%= current_member.name %><br>
     <%= link_to member_path(current_member.id) do %>
      <i class="fas fa-cog"></i>
     <% end %>
    </div>
    <div class= "col-6">
       <% @reviews.each do |review| %>
      <div class= "lists border">
        <div>
        <%= image_tag review.get_image(100,100) %>
        </div>
        <div>
        店名:   <%= link_to review.shop_name, review_path(review.id) %>
        場所:   <%= review.place %>
        カテゴリ: <%= review.category.category_name %>
        </div>
        
        <% if review.favorited_by?(current_member) %><!--=自分がいいねしていたら-->
         
          <p>
           <%= link_to review_favorites_path(review), method: :delete do %>
            ♥<%= review.favorites.count %> いいね 
           <% end %>
          </p>
           <% else %>
          <p>
           <%= link_to review_favorites_path(review), method: :post do %>
               ♡<%= review.favorites.count %> いいね
           <% end %>
          </p>
        <% end %>
        コメントー件
       <% end %>
      </div>
    </div>
  </div>
  <div class= "row">
    <div class= "col">
  <%= paginate @reviews %>
    </div>
  </div>
</div>
