<h2>投稿詳細</h2>
<div class= "container">
  <div class= "row">
    <div class= "col-4">
     <%= image_tag current_member.get_profile_image(100,100), class:"mt-3 rounded-circle"; %><br>
     <%= current_member.name %><br>
     <%= link_to member_path(current_member.id) do %>
      <i class="fas fa-cog"></i>
     <% end %>
    </div>
    <div class= "col-6">
     <%= image_tag @review.get_image(100,100) %>
     <p>
      店名:   <%= @review.shop_name %><br>
      場所:   <%= @review.place %><br>
      カテゴリ: <%= @review.category.category_name %><br>
      投稿者: <%= @review.member.name %><br>
      レビュー: <%= @review.review_cont %><br>
      投稿日時: <%= @review.created_at.strftime('%Y/%m/%d') %><br>
      <% if @review.favorited_by?(current_member) %><!--=自分がいいねしていたら-->
        <p>
         <%= link_to review_favorites_path(@review), method: :delete do %>
          ♥<%= @review.favorites.count %> いいね 
         <% end %>
        </p>
         <% else %>
        <p>
         <%= link_to review_favorites_path(@review), method: :post do %>
             ♡<%= @review.favorites.count %> いいね
         <% end %>
        </p>
      <% end %>
     </p>
     <% if @review.member == current_member %>
     <%= link_to "Destroy",review_path(@review.id),method: :delete, "data-confirm" => "Are you sure?" %>
     <%= link_to "Edit",edit_review_path(@review.id) %>
     <% end %>
    </div>
  </div>
</div>